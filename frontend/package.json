{
	"name": "npm-scripts-starter",
	"version": "1.0.0",
	"description": "Minimal project template",
	"main": "index.js",
	"size-limit": [
		{
			"path": "../backend/chat/static/js/*.js"
		}
	],
	"browserslist": [
		"last 50 versions"
	],
	"scripts": {
		"start": "npm-run-all --parallel watch:*:dev",
		"watch:prod": "npm-run-all --parallel watch:*",
		"watch:css:dev": "onchange \"src/scss/**/*.scss\" -- npm run build:css:dev",
		"watch:css": "onchange \"src/scss/**/*.scss\" -- npm run build:css",
		"watch:html:dev": "onchange \"src/pug/**/*.pug\" -- npm run build:html:dev",
		"watch:html": "onchange \"src/pug/**/*.pug\" -- npm run build:html",
		"watch:js:dev": "onchange \"src/js/**/*.js\" -- npm run build:js:dev",
		"watch:js": "onchange \"src/js/**/*.js\" -- npm run build:js",
		"watch:serve:dev": "browser-sync start --server \"dist/\" --files \"**/*.html\" \"**/*.css\" \"**/*.js\" --https=true",
		"build:html:dev": "pug -O src/pug/abstracts/data.js --output-style compressed -o dist/ src/pug/index.pug",
		"build:html": "pug -O src/pug/abstracts/data.js --output-style compressed -o '../backend/chat/templates/' src/pug/templates",
		"build:css": "npm run css:folder && npm run  css:compile && npm run css:postcss",
		"build:css:dev": "npm run css:folder:dev && npm run  css:compile:dev",
		"css:folder": "mkdirp ../backend/chat/static/css",
		"css:folder:dev": "mkdirp dist/static/css",
		"css:compile": "node-sass --output-style compressed --include-path scss \"src/scss/main.scss\" \"../backend/chat/static/css/main.css\"",
		"css:compile:dev": "node-sass --output-style expanded --include-path scss \"src/scss/main.scss\" \"dist/static/css/main.css\"",
		"css:postcss": "postcss ../backend/chat/static/css/*.css --use autoprefixer -b \"last 5 versions\" -d ../backend/chat/static/css/",
		"build:js": "mkdirp ../backend/chat/static/js && browserify src/js/index.js -t envify -t yamlify -t babelify -p tinyify > ../backend/chat/static/js/index.js",
		"build:js:dev": "mkdirp dist/static/js && browserify src/js/index.js -t envify -t yamlify -t babelify > dist/static/js/index.js",
		"build:icons": "svgo -f src/assets/icons -o ../backend/chat/static/assets/icons --disable=removeViewBox",
		"build:icons:dev": "svgo -f src/assets/icons -o dist/static/assets/icons --disable=removeViewBox",
		"build": "npm-run-all --parallel build:*",
		"build:dev": "npm-run-all --parallel build:*:dev",
		"size": "size-limit"
	},
	"author": "Irina Illustrova",
	"license": "ISC",
	"dependencies": {
		"autolinker": "^3.14.2",
		"dropkickjs": "^2.2.4",
		"dropzone": "^5.7.2"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@size-limit/preset-app": "^4.9.1",
		"autoprefixer": "^9.8.6",
		"babel-core": "^6.26.3",
		"babelify": "^10.0.0",
		"browser-sync": "^2.27.10",
		"browserify": "^16.5.2",
		"doiuse": "^4.4.0",
		"emojibase": "^3.2.0",
		"emojibase-data": "^4.2.1",
		"envify": "^4.1.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.2.0",
		"html-minifier": "^4.0.0",
		"node-sass": "^4.14.1",
		"npm-run-all": "^4.1.5",
		"onchange": "^6.1.1",
		"postcss": "^8.2.1",
		"postcss-cli": "^8.3.1",
		"prettier": "^2.2.1",
		"pug-cli": "^1.0.0-alpha6",
		"size-limit": "^4.9.1",
		"stylelint": "^13.8.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-order": "^4.1.0",
		"stylelint-prettier": "^1.1.2",
		"stylelint-scss": "^3.18.0",
		"svgo": "^1.3.2",
		"tinyify": "^2.5.2",
		"yaml": "^1.10.0",
		"yamlify": "^0.2.0"
	}
}
